# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 4
